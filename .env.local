# Local Development Environment Configuration
# Use this for local subnet testing with replica database

# Database Configuration
LUMINAR_ENV=local
LUMINAR_LOCAL_DB_HOST=localhost
LUMINAR_LOCAL_DB_PORT=5432
LUMINAR_LOCAL_DB_NAME=luminar_local
LUMINAR_LOCAL_DB_USER=luminar_dev
LUMINAR_LOCAL_DB_PASSWORD=dev_password

# Subnet Configuration (Local Testing)
SUBNET_NETUID=1
MIN_STAKE_THRESHOLD=100  # Lower threshold for testing

# API Configuration
API_BASE_URL=http://localhost:8000/
API_KEY=dev_api_key

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/luminar_subnet.log

# Security (Relaxed for local)
SSL_MODE=disable

# Connection Pooling (Smaller for local)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=20
DB_POOL_RECYCLE=3600

# Performance (Smaller batches for testing)
BATCH_SIZE=10
PROCESSING_TIMEOUT=60
CONSENSUS_TIMEOUT=30

# Development Features
MOCK_SUBTENSOR=true
GENERATE_SYNTHETIC_DATA=true
AUTO_MIGRATE_DB=true

# Testing
PYTEST_DB_NAME=luminar_test
TEST_DATA_SIZE=100

# AI Models (Use smaller models for local development)
USE_LIGHTWEIGHT_MODELS=true
CLIP_MODEL_NAME=openai/clip-vit-base-patch32
TRANSFORMER_MODEL_NAME=all-MiniLM-L6-v2
