# Production Environment Configuration
# Use this for connecting to centralized Luminar database

# Database Configuration
LUMINAR_ENV=production
LUMINAR_DB_HOST=central-db.luminar.network
LUMINAR_DB_PORT=5432
LUMINAR_DB_NAME=luminar_production
LUMINAR_DB_USER=luminar_subnet
LUMINAR_DB_PASSWORD=your_production_password_here

# Read Replica for Performance
LUMINAR_DB_READ_HOST=replica-db.luminar.network

# Subnet Configuration
SUBNET_NETUID=1
MIN_STAKE_THRESHOLD=1000

# API Configuration
API_BASE_URL=https://api.luminar.network/
API_KEY=your_production_api_key

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/luminar/subnet.log

# Security
SSL_MODE=require
DATABASE_SSL_CERT=/path/to/client-cert.pem
DATABASE_SSL_KEY=/path/to/client-key.pem
DATABASE_SSL_ROOT_CERT=/path/to/ca-cert.pem

# Connection Pooling
DB_POOL_SIZE=50
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=60
DB_POOL_RECYCLE=7200

# Performance
BATCH_SIZE=100
PROCESSING_TIMEOUT=300
CONSENSUS_TIMEOUT=120

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
HEALTH_CHECK_INTERVAL=30
