# Testnet Environment Configuration
# Use this for testing Luminar subnet on Bittensor testnet

# Environment
LUMINAR_ENV=testnet
SUBTENSOR_NETWORK=test
SUBTENSOR_CHAIN_ENDPOINT=wss://test.finney.opentensor.ai:443

# Database Configuration (Local for testnet)
LUMINAR_DB_HOST=localhost
LUMINAR_DB_PORT=5432
LUMINAR_DB_NAME=luminar_testnet
LUMINAR_DB_USER=luminar_test
LUMINAR_DB_PASSWORD=testnet_password

# Subnet Configuration
SUBNET_NETUID=999  # Use an available testnet netuid
MIN_STAKE_THRESHOLD=10  # Lower for testnet

# API Configuration
API_BASE_URL=http://localhost:8000/
API_KEY=testnet_api_key

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/luminar_testnet.log

# Security (Relaxed for testing)
SSL_MODE=disable

# Connection Pooling (Smaller for testnet)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=20

# Performance (Optimized for testing)
BATCH_SIZE=20
PROCESSING_TIMEOUT=120
CONSENSUS_TIMEOUT=60

# Testing Features
MOCK_SUBTENSOR=false
GENERATE_SYNTHETIC_DATA=true
AUTO_MIGRATE_DB=true

# Testnet specific
TESTNET_MODE=true
FAUCET_URL=https://faucet.bittensor.com/
EXPLORER_URL=https://explorer.bittensor.com/
